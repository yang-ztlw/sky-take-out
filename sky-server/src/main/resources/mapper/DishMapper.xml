<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sky.mapper.DishMapper">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into dish values(null, #{name}, #{categoryId}, #{price}, #{image}, #{description}, #{status}, #{createTime}, #{updateTime}, #{createUser}, #{updateUser})
    </insert>

    <select id="select" resultType="com.sky.vo.DishVO">
        select d.*, c.name category_name from dish d, category c
        <where>
            d.category_id = c.id
            <if test="categoryId != null and categoryId != ''">
                and d.category_id = #{categoryId}
            </if>
            <if test="name != null and name != ''">
                and d.name like concat('%',#{name},'%')
            </if>
            <if test="status != null and status != ''">
                and d.status = #{status}
            </if>
        </where>
        order by d.create_time desc
    </select>

    <delete id="delete">
        delete
        from dish
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
</mapper>